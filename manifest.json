{
    "manifest_version": 2,
    "name": "Heavens Watch",
    "version": "0.1",
    "description": "HeavensDoor用観測ツール",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": [
            "js/lib/jquery-3.0.0.min.js",
            "js/eventpage.js"
        ],
        "persistent": false
    },
    "options_page": "options.html",
    "permissions": [
        "alarms",
        "notifications",
        "tabs",
        "storage",
        "http://*/*"
    ],
    "web_accessible_resources": [
        "icon.png"
    ],
    "icons": {
        "128" : "icon.png"
    }
}
