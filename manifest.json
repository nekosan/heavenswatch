{
    "manifest_version": 2,
    "name": "Heavens Watch",
    "short_name": "Heavens Watch",
    "version": "0.2.2",
    "description": "HeavensDoor用クライアント",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "img/icon_16.png"
    },
    "background": {
        "scripts": [
            "js/lib/jquery-3.0.0.min.js",
            "js/eventpage.js"
        ],
        "persistent": false
    },
    "options_page": "options.html",
    "permissions": [
        "alarms",
        "notifications",
        "tabs",
        "storage",
        "http://*/*"
    ],
    "web_accessible_resources": [
        "img/icon_128.png"
    ],
    "icons": {
        "16" : "img/icon_16.png",
        "48" : "img/icon_48.png",
        "128" : "img/icon_128.png"
    }
}
